{
  "name": "data-structure-visualizer",
  "version": "1.0.0",
  "description": "An interactive and responsive tool for visualizing data structures and algorithms",
  "main": "index.js",
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false --ci",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:unit": "jest --testPathPattern=\\.test\\.(ts|tsx)$",
    "test:integration": "jest --testPathPattern=integration",
    "test:components": "jest --testPathPattern=components.*\\.test\\.(ts|tsx)$",
    "test:utils": "jest --testPathPattern=utils.*\\.test\\.(ts|tsx)$",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:performance": "jest --testPathPattern=performance",
    "test:accessibility": "jest --testPathPattern=accessibility",
    "test:all": "jest --coverage --verbose --passWithNoTests",
    "audit:a11y": "pa11y http://localhost:3000",
    "audit:lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "test:clear-cache": "jest --clearCache",
    "eject": "react-scripts eject",
    "build:analyze": "set ANALYZE=true && npm run build",
    "build:stats": "npm run build -- --stats",
    "build:production": "set NODE_ENV=production && npm run build",
    "analyze": "node scripts/analyze-bundle.js",
    "build:analyze:report": "npm run build && npm run analyze",
    "serve": "serve -s build -l 3000",
    "serve:analyze": "npm run build:analyze:report && npm run serve",
    "size-limit": "npm run build && node scripts/analyze-bundle.js",
    "clean": "rimraf build dist coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .tsx,.ts --max-warnings 0",
    "lint:fix": "eslint src --ext .tsx,.ts --fix"
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0",
    "framer-motion": "^10.12.18",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-router-dom": "^6.14.1",
    "react-scripts": "5.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "styled-components": "^6.0.4"
  },
  "overrides": {
    "nth-check": "^2.1.1",
    "postcss": "^8.4.31",
    "prismjs": "^1.30.0",
    "webpack-dev-server": "^4.15.1",
    "svgo": "^3.0.0"
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@playwright/test": "^1.40.0",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/jest-axe": "^3.5.8",
    "@axe-core/playwright": "^4.8.2",
    "babel-jest": "^29.7.0",
    "compression-webpack-plugin": "^11.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "gzip-size": "^7.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-styled-components": "^7.2.0",
    "jest-transform-stub": "^2.0.0",
    "jest-watch-typeahead": "^3.0.1",
    "lighthouse": "^11.4.0",
    "pa11y": "^7.0.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "typescript": "^4.9.5",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "rules": {
      "react-hooks/exhaustive-deps": "warn",
      "react/no-unescaped-entities": "off",
      "no-console": "warn",
      "@typescript-eslint/no-unused-vars": "warn",
      "no-unused-vars": "warn",
      "no-restricted-globals": "off",
      "no-loop-func": "warn",
      "@typescript-eslint/no-redeclare": "warn",
      "no-constant-condition": "warn",
      "@typescript-eslint/ban-types": "warn",
      "prefer-const": "warn"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
